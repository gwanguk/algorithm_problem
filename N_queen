#include <stdio.h>
#include <iostream>

using namespace std;
int map[15][15];
int N;
int cnt = 0;

int check(int x, int y) {
	int nop = 0;
	for (int i = 0; i < y; i++)
	{
		for (int j = 0; j < N; j++)
		{
			if (map[i][j] == 1)
			{
				if (j == x)
					return 1;
				if (abs(x - j) == abs(y - i))
					return 1;
			}
		}
	}
	return 0;

}

void funcRecursive(int k) {
	
		for (int x = 0; x < N; x++)
		{
			if (check(x, k) == 0)
			{
				if (k == N - 1)
				{
					cnt++;
					continue;
				}
				map[k][x] = 1;
				if (k + 1 < N)
				funcRecursive(k + 1);
				map[k][x] = 0;
			}
		}
}

void reset()
{
	for (int k = 0; k < N; k++)
	{
		for (int i = 0; i < N; i++)
		{
			for (int j = 0; j < N; j++)
				map[i][j] = 0;
		}
	}
}

int main()
{
	cin >> N;

	if (N % 2 == 0)
	{
		for (int n = 0; n < N / 2; n++)
		{
			reset();
			map[0][n] = 1;
			funcRecursive(1);
		}
		cnt *= 2;
	}
	else
	{
		for (int n = 0; n < N / 2; n++)
		{
			reset();
			map[0][n] = 1;
			funcRecursive(1);
		}
		cnt *= 2;
		reset();
		map[0][N / 2] = 1;
		funcRecursive(1);
	}
	

	printf("%d", cnt);
	return 0;
}
